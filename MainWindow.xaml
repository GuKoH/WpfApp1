                        </Grid.ColumnDefinitions>
                        <Button
            Style="{DynamicResource MaterialDesignToolButton}">
                            <materialDesign:PackIcon
              Kind="Magnify"
              Opacity=".56" />
                        </Button>
                        <TextBox x:Name="SearchBox"
            Grid.Column="1"
            Margin="8 0 0 0"
            materialDesign:HintAssist.Hint="Поиск по компаниям"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="200"
            VerticalAlignment="Center" TextChanged="SearchBox_TextChanged" />
                        <Button
            Style="{DynamicResource MaterialDesignToolButton}"
            Grid.Column="2">
                            <materialDesign:PackIcon
              Kind="Microphone"
              Opacity=".56"
              Margin="8 0 0 0" />
                        </Button>
                    </Grid>
                </materialDesign:ColorZone>
                <RadioButton x:Name="Инфо1"
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4,0"
                    IsChecked="True" Height="Auto" Width="106" Checked="Info_Click"
       >
                    <materialDesign:PackIcon Kind="InfoCircle" Height="49" Width="66"/>
                </RadioButton>
                <RadioButton x:Name="Отправить1"
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4,0"
                    IsChecked="False" Height="Auto" Width="106" Checked="Send_Click"
       >
                    <materialDesign:PackIcon Kind="EmailSend" Height="49" Width="66"/>
                </RadioButton>
                <RadioButton x:Name="Получить"
                    Style="{StaticResource MaterialDesignTabRadioButton}"
                    Margin="4,0"
                    IsChecked="False" Height="Auto" Width="106" Click="RecieveMail_Click"
       >
                    <materialDesign:PackIcon Kind="EmailOpen" Height="49" Width="66"/>
                </RadioButton>
                <RadioButton x:Name="Парсер2"
      Style="{StaticResource MaterialDesignTabRadioButton}"
      Margin="4,0"
      IsChecked="False" Height="Auto" Width="106" Checked="btParser_Click"
       >
                    <materialDesign:PackIcon Kind="SearchAdd" Height="49" Width="66"/>
                </RadioButton>
            </StackPanel>
        </materialDesign:ColorZone>

        <materialDesign:ColorZone materialDesign:ShadowAssist.ShadowDepth="Depth3" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" Mode="PrimaryDark"  CornerRadius="5" Panel.ZIndex="1" Margin="0,0,0,0" VerticalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <materialDesign:PackIcon x:Name="GlobalSqlStatus" Kind="CheckboxBlankCircle" Width="20" Height="20" VerticalAlignment="Center"/>
                <TextBlock Text="Global DB" FontSize="16" Width="75" VerticalAlignment="Center" Margin="0,6"/>
                <TextBlock x:Name="glCount" FontSize="16" Width="75" VerticalAlignment="Center" Margin="15,6,0,6"/>
                <materialDesign:PackIcon x:Name="LocalSqlStatus" Kind="CheckboxBlankCircle" Width="20" Height="20" VerticalAlignment="Center" Margin="50,0,0,0"/>
                <TextBlock Text="Local DB" FontSize="16" Width="66" VerticalAlignment="Center" Margin="0,6"/>
                <TextBlock x:Name="lcCount" FontSize="16" Width="75" VerticalAlignment="Center" Margin="15,6,0,6"/>
                <TextBlock x:Name="uidTx" FontSize="16" Width="75" VerticalAlignment="Center" Margin="15,6,0,6"/>
                <TextBlock x:Name="SyncStatus" FontSize="16" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <Button x:Name="SyncDB" Click="SyncDB_Click" Margin="15,3,0,3" Height="Auto" Visibility="Hidden" >
                    <materialDesign:PackIcon Kind="Sync"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Height="Auto" />
                </Button>
            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>
